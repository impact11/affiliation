<h2>Edit Affilate</h2>
<p class="actions"><%= link_to "Back to Affilates", admin_affiliates_path %></p>

<% form_tag admin_affiliates_path do %>

	<p><%= label_tag "Username:" %><br />
	<%= text_field_tag "login", @user.login %></p>

	<p><%= label_tag "Email Address:" %><br />
	<%= text_field_tag "email", @user.email %></p>

	<p class="submit"><%= submit_tag "Create" %></p>
<% end %>
