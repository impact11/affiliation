<h2>New User</h2>
<p class="actions"><%= link_to "Back to Users", admin_users_path %></p>

<% form_tag admin_users_path do %>

	<p><%= label_tag "Username:" %><br />
	<%= text_field_tag "login" %></p>

	<p><%= label_tag "Email Address:" %><br />
	<%= text_field_tag "email" %></p>

	<p><%= label_tag "Roles:" %><br />
	<%= text_field_tag "roles" %></p>

	<p class="submit"><%= submit_tag "Create" %></p>
<% end %>
